@model WebLogistica.Models.EnvioIn
@{
    ViewBag.Title = "Envios Pendientes";
}
@section enviosPendientesDataTable
{
    <script src="@Url.Content("~/Scripts/jquery.dataTables.min.js")"></script>
    <link href="@Url.Content("~/Scripts/jquery.dataTables.min.css")" rel="stylesheet" type="text/css" />

    <script src="@Url.Content("~/Scripts/bootstrap-dialog.min.js")"></script>
    <link href="@Url.Content("~/Scripts/bootstrap-dialog.min.css")" rel="stylesheet" type="text/css" />

    <script src="@Url.Content("~/Scripts/enviosPendientes-table.js")"></script>

    <script src="@Url.Content("~/Scripts/jszip.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jszip.min.js")"></script>
    <script src="@Url.Content("~/Scripts/dataTables.buttons.min.js")"></script>
    <script src="@Url.Content("~/Scripts/pdfmake.min.js")"></script>
    <script src="@Url.Content("~/Scripts/vfs_fonts.js")"></script>
    <script src="@Url.Content("~/Scripts/buttons.html5.min.js")"></script>
    <script src="@Url.Content("~/Scripts/buttons.print.min.js")"></script>
    <link href="@Url.Content("~/Scripts/buttons.jqueryui.min.css")" rel="stylesheet" type="text/css" />
}
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Panel de Control
                </h1>
            </div>
        </div>
        <!-- /.row -->

        <div class="modal fade">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                        <h4 class="modal-title">Modal title</h4>
                    </div>
                    <div class="modal-body">
                        <p>One fine body…</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                        <button type="button" class="btn btn-primary">Confirmar</button>
                    </div>
                </div><!-- /.modal-content -->
            </div><!-- /.modal-dialog -->
        </div><!-- /.modal -->

        <div class="row">
            <div class="col-lg-12 hidden-xs">
                <div class="alert alert-info alert-dismissable">
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                    <i class="fa fa-info-circle"></i><a><strong> Tiene mensajes pendiente de los transportistas.</strong></a> Por favor comunicate a la brevedad.
                </div>
            </div>
        </div>
        <!-- /.row -->

        <div class="row">
            <div class="col-lg-4 col-md-6 hidden-xs">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-3">
                                <i class="fa fa-comments fa-5x"></i>
                            </div>
                            <div class="col-xs-9 text-right">
                                <div class="huge">5</div>
                                <div>Nuevos Envios Cargados!</div>
                            </div>
                        </div>
                    </div>
                    <a href="#">
                        <div class="panel-footer">
                            <span class="pull-left">Ver Detalle</span>
                            <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                            <div class="clearfix"></div>
                        </div>
                    </a>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 hidden-xs">
                <div class="panel panel-green">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-3">
                                <i class="fa fa-tasks fa-5x"></i>
                            </div>
                            <div class="col-xs-9 text-right">
                                <div class="huge">3d</div>
                                <div>Promedio Envio Ult. 15 dias.</div>
                            </div>
                        </div>
                    </div>
                    <a href="#">
                        <div class="panel-footer">
                            <span class="pull-left">Ver Detalle</span>
                            <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                            <div class="clearfix"></div>
                        </div>
                    </a>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 hidden-xs">
                <div class="panel panel-red">
                    <div class="panel-heading">
                        <div class="row">
                            <div class="col-xs-3">
                                <i class="fa fa-shopping-cart fa-5x"></i>
                            </div>
                            <div class="col-xs-9 text-right">
                                <div class="huge">10</div>
                                <div>Envios Pendientes!</div>
                            </div>
                        </div>
                    </div>
                    <a href="#">
                        <div class="panel-footer">
                            <span class="pull-left">Ver Detalle</span>
                            <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                            <div class="clearfix"></div>
                        </div>
                    </a>
                </div>
            </div>
        </div>
        <div class="row">
            <div id="container">
                <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#nuevoEnvio">Nuevo Envio</button>
                <h2>Envios</h2>
                @using (Html.BeginForm("Nuevo", "Envios", FormMethod.Post))
                {
                    <div id="nuevoEnvio" class="modal fade in" tabindex="-1" role="dialog">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                    <h3 class="modal-title">Nuevo Envio</h3>
                                </div>
                                <div class="modal-body">
                                    <div class="form-group">
                                        <label>
                                            Cliente
                                            @Html.DropDownListFor(m => m.IdCliente, (IEnumerable<SelectListItem>)TempData["ClientesDDLId"], new { id = "ddlClientes", @class = "form-control" })
                                        </label>
                                        <br />
                                        <label>Transportista: @Html.TextBox("DescTransportista", null, new { @readonly = "readonly" })</label>
                                    </div>
                                    <div class="form-group">
                                        <div>
                                            <strong>Observaciones:</strong>
                                        </div>
                                        <label>
                                            @Html.TextAreaFor(m => m.Observaciones, new { rows = 10, cols = 50 })
                                        </label>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                    <button type="submit" class="btn btn-primary">Grabar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                <table id="enviosPendientesDataTable" class="display">
                    <thead>
                        <tr>
                            <th>IdEnvio</th>
                            <th>DescEnvio</th>
                            <th>DescCLiente</th>
                            <th>DescTransportista</th>
                            <th>FechaCarga</th>
                            <th>Observaciones</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
    </div>
<!-- /.container-fluid -->
